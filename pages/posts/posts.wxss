/* pages/posts/posts.wxss */
@import "post-template/post-template.wxss";
swiper{
  height: 550rpx;
  position: relative;
}

swiper image{
  width: 100%;
  height: 100%;
} 

.swiperview{
  position: absolute;
  top: 0;
  let: 0;
  height: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.swiperdate{
  font-size: 20px;
  color: #554236;
  margin: 0 40rpx;
}

.swipertitle{
  font-size: 30px;
  font-weight: bold;
  color: #fff;
  font-family: '宋体';
  margin: 0 20rpx;
  padding: 0 10rpx;
  background-color: #000;
  opacity: 0.6;
  border-radius: 10rpx;
}

.navigatestyle{
  display: flex;
  height: 80rpx;
  width: 100%;
  background-color: #dcdcdc;
}

.btn{
  width: 50%;
  height: 100%;
  line-height: 80rpx;
  letter-spacing: 25rpx;
  text-align: center;
  font-size:35rpx;
  font-weight: bold;
  border: 2px solid #dcdcdc;
  border-radius: 5rpx;
  border-bottom: hidden;
  box-shadow:1px 1px 1px 1px #e6e4e4;
}

.active{
  border: 2px solid #66BAB7;
  color: #66BAB7;
  background-color: #fff;
  border-bottom: hidden;
}

.backtotop{
  position: fixed;
  right: 0;
  top: 50%;
  opacity: 0.5;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  font-size: 25rpx; 
  font-weight: 500;
  border: 1rpx solid;
  line-height: 100rpx;
  background-color: #828282; 
  color: rgb(245, 245, 94);
  margin-top: -50rpx;
}