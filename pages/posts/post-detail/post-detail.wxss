/* pages/posts/post-detail/post-detail.wxss */

.detailcontainer {
  display: flex;
  flex-direction: column;
}

.headimage {
  width: 100%;
  height: 450rpx;
}

.avatar {
  display: flex;
  align-items: center;
}

.avatar image {
  width: 70rpx;
  height: 70rpx;
  margin: 10rpx;
}


.name {
  font-size: 40rpx;
  color: #777;
}

.release {
  margin: 15rpx 20rpx 15rpx 40rpx;
  font-size: 30rpx;
  color: #999;
}

.ddate {
  font-size: 35rpx;
  color: #888;
}

.dtitle {
  padding: 10rpx 20rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.icon {
  float:right;
  width: 35%;
  display: flex;
}

.icon image {
  width: 90rpx;
  height: 90rpx;
}

.horizon {
  position: relative;
  top: 45rpx;
  background-color: rgb(238, 236, 236);
  height: 1px;
  z-index: -1;
}

.dcontent{
  font-size:30rpx;
  color:#555;
  letter-spacing: 2rpx;
  margin:10rpx;
  line-height: 40rpx;
  padding: 30rpx 15rpx;
}

button::after {
  border: none;
}

.sharebutton{
  padding: 0;
  background-color: white; 
  line-height: 0;
}
